<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView_listItemRecipeDetailsStepsIngredient_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ingredients"
            app:tint="@color/colorTextPrimary"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView_listItemRecipeDetailsStepsIngredient_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/label_ingredients"
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_listItemRecipeDetailsStepsIngredient_icon"
            app:layout_constraintLeft_toRightOf="@+id/imageView_listItemRecipeDetailsStepsIngredient_icon"
            app:layout_constraintTop_toTopOf="@+id/imageView_listItemRecipeDetailsStepsIngredient_icon"/>
    </android.support.constraint.ConstraintLayout>
</layout>